                  <td class="px-2 py-4 text-center text-xl md:text-2xl opacity-40">
                    ❌
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-8">
      <p class="text-slate-tertiary text-sm font-mono mx-auto">
        > Built for Solana. Built by developers. Built for you.
      </p>
    </div>
  </div>
</section>

<style>
  /* Mobile optimization */
  @media (max-width: 640px) {
    table {
      font-size: 0.65rem;
    }

    th, td {
      padding: 0.4rem 0.15rem;
    }

    .terminal-window {
      font-size: 9px;
    }

    th, td {
      white-space: nowrap;
    }
  }

  /* Enhance table readability */
  table {
    min-width: 800px;
  }

  @media (min-width: 1024px) {
    table {
      min-width: 100%;
    }
  }

  /* Header text wrapping for narrow columns */
  th {
    white-space: normal;
    line-height: 1.2;
  }
</style>
