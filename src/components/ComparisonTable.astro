---
// Comparison Table Component
---

<section id="comparison" class="section-container">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-mono font-bold gradient-text mb-4">
        Why Choose SolCoder?
      </h2>
      <p class="text-slate-secondary text-lg max-w-2xl mx-auto">
        The only AI coding tool built specifically for Solana development
      </p>
    </div>

    <!-- Comparison Table -->
    <div class="overflow-x-auto">
      <div class="inline-block min-w-full align-middle">
        <div class="terminal-window">
          <div class="terminal-header">
            <span class="terminal-button terminal-button-red"></span>
            <span class="terminal-button terminal-button-yellow"></span>
            <span class="terminal-button terminal-button-green"></span>
            <span class="ml-2 text-xs text-slate-tertiary font-mono">comparison.md</span>
          </div>

          <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
              <thead>
                <tr class="border-b border-solana-green/30">
                  <th class="px-3 py-4 text-solana-green font-mono text-xs md:text-sm">
                    Tool
                  </th>
                  <th class="px-2 py-4 text-solana-green font-mono text-xs md:text-sm text-center">
                    Code Completion
                  </th>
                  <th class="px-2 py-4 text-solana-green font-mono text-xs md:text-sm text-center">
                    Multi-language
                  </th>
                  <th class="px-2 py-4 text-solana-green font-mono text-xs md:text-sm text-center">
                    Solana Deploy
                  </th>
                  <th class="px-2 py-4 text-solana-green font-mono text-xs md:text-sm text-center">
                    Built-in Wallet
                  </th>
                  <th class="px-2 py-4 text-solana-green font-mono text-xs md:text-sm text-center">
                    Open-source
                  </th>
                </tr>
              </thead>
              <tbody class="font-mono text-sm">
                <!-- SolCoder Row -->
                <tr class="border-b border-solana-green/20 bg-solana-green/5 hover:bg-solana-green/10 transition-colors">
                  <td class="px-3 py-4 font-bold text-solana-green text-xs md:text-base">
                    SolCoder
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
                  </td>
                </tr>

                <!-- Cursor Row -->
                <tr class="border-b border-solana-green/20 hover:bg-deep-space/50 transition-colors">
                  <td class="px-3 py-4 text-slate-secondary text-xs md:text-base">
                    Cursor
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl opacity-40">
                    ❌
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl opacity-40">
                    ❌
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl opacity-40">
                    ❌
                  </td>
                </tr>

                <!-- Windsurf Row -->
                <tr class="border-b border-solana-green/20 hover:bg-deep-space/50 transition-colors">
                  <td class="px-3 py-4 text-slate-secondary text-xs md:text-base">
                    Windsurf
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
                  </td>
                  <td class="px-2 py-4 text-center text-xl md:text-2xl">
                    ✅
